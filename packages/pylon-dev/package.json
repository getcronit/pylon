    "directory": "packages/create-pylon"
  },
  "homepage": "https://pylon.cronit.io",
  "dependencies": {
    "@getcronit/pylon-telemetry": "workspace:^",
    "@gqty/cli": "^4.2.0",
    "commander": "^12.1.0",
    "consola": "^3.2.3",
    "dotenv": "^16.4.5",
    "ps-tree": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
