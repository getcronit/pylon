    "url": "https://github.com/getcronit/pylon.git",
    "directory": "packages/pylon-telemetry"
  },
  "homepage": "https://pylon.cronit.io/docs/telemetry",
  "dependencies": {
    "@getcronit/pylon": "beta"
  },
  "peerDependencies": {
    "hono": "^4.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
